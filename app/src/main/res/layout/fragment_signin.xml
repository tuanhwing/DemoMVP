<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="VeSha"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--<com.google.android.gms.common.SignInButton-->
            <!--android:id="@+id/btn_gg_signin"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingLeft="15dp"-->
            <!--android:paddingRight="15dp" />-->

        <!--<com.facebook.login.widget.LoginButton-->
            <!--android:id="@+id/btn_fb_signin"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:layout_marginTop="30dp"-->
            <!--android:layout_marginBottom="30dp"-->
            <!--android:paddingLeft="15dp"-->
            <!--android:paddingRight="15dp" />-->

        <TextView
            android:id="@+id/tv_signin_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_google_plus"
            android:gravity="center"
            android:text="Continue with Google"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <FrameLayout
            android:id="@+id/FrameLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.facebook.login.widget.LoginButton
                android:id="@+id/btn_fb_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_signin_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/com_facebook_button_background"
                android:drawableLeft="@drawable/com_facebook_button_icon_white"
                android:gravity="center"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:text="Continue with Facebook"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </FrameLayout>


        <TextView
            android:id="@+id/tv_signin_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ic_phone_signin"
            android:gravity="center"
            android:text="Continue with Phone"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:textColor="@color/white_greyish"
            />
    </LinearLayout>


</LinearLayout>