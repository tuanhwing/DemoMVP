<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="project.vehiclessharing.MainActivity">
    <RelativeLayout
        android:id="@+id/layout_inforequest"
        android:layout_below="@+id/toolbar"
        android:layout_margin="@dimen/margin_form_inforrequest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/custom_rectangle">
        <TextView
            android:id="@+id/tv_source"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text_location"
            android:drawableLeft="@drawable/ic_place_red_a200_24dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_location"
            android:singleLine="true"/>
        <View
            android:id="@+id/temp1"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="@dimen/margin_form_inforrequest"
            android:layout_marginBottom="@dimen/margin_form_inforrequest"
            android:background="@color/white_greyish"
            android:layout_below="@+id/tv_source"/>

        <TextView
            android:id="@+id/tv_destination"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_text_location"
            android:layout_below="@+id/temp1"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:drawableLeft="@drawable/ic_directions_blue_grey_600_24dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_location"
            android:singleLine="true"/>
    </RelativeLayout>

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>
